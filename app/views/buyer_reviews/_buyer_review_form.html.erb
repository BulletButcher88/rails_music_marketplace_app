<%= form_for @buyer_review, url: transaction_buyer_reviews_path(params[:transaction_id]) do |f| %>
  <p><%= f.label 'Leave a rating out of 5' %></p>
  <p><%= f.text_field :rate_buyer, class: "form-control"%></p>
  <p><%= f.label 'Leave some feedback' %></p>
  <p><%= f.text_area :buyer_review_content, class: "form-control" %></p>
  <%= f.submit "Submit Review", class:"btn btn-primary" %>
<% end %> 